{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src",
    "importHelpers": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "types": [
      "node",
      "jest",
      "yargs"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
