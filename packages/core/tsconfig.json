{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src",
    "importHelpers": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
