{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/*.ts",
    "typings/*.d.ts"
  ]
}
