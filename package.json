    "chai": "^4.1.1",
    "clean-webpack-plugin": "^0.1.17",
    "lodash": "^4.17.4",
    "mocha": "^3.5.0",
    "nodemon": "^1.14.3",
    "rxjs": "^5.5.0",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2",
    "uglifyjs-webpack-plugin": "^0.4.6",
